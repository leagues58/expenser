<head>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="../stylesheets/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
    {{>navbar}}

    <div class="row">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Add Item</span>
                <form >
                    <div class="row">
                        <div class="input-field col s12 m12 l6 ">
                            <input id="item_name" type="text" class="">
                            <label for="item_name">Name</label>
                        </div>
                        <div class="input-field col s12 m12 l6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn-large"><i class="material-icons left">add</i>Add To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>






<script type="text/javascript" src="../javascripts/materialize.js"></script>
<script>
    // init dropdown
    var elemSelect = document.querySelector('select');
    var instanceSelect = M.FormSelect.init(elemSelect, {});

    // init navbar
    var elemNav = document.querySelector('.sidenav');
    var instanceNav = M.Sidenav.init(elemNav, {});

    // init FAB
    elemFAB = document.querySelector('.fixed-action-btn');
    instanceFAB = M.FloatingActionButton.init(elemFAB, {});
</script>
