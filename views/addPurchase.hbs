<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="../stylesheets/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>
    {{>navbar}}
    <div class="container">
        <h3>Add a new purchase</h3>
        <div class="row">
            <form class="col s12" method="POST">

                <div class="row">
                    <div class="input-field col s6">
                        {{#if storeData}}
                            <select name="store_name">
                                {{#each storeData}}
                                    <option value="{{this.store_id}}">{{this.name}} - {{this.city}}, {{this.state}}</option>
                                {{/each}}
                            </select>
                            <label for="store_name">Store</label>
                        {{else}}
                            <input value="" id="store_name" name="store_name" type="text" class="validate">
                            <label for="store_name">Store Name:</label>
                        {{/if}}

                    </div>
                    <div class="input-field col s6">
                        <select name="store_state">
                            <option value="SC">South Carolina</option>
                            <option value="GA">Georgia</option>
                            <option value="AL">Alaska</option>
                            <option value="CA">California</option>
                            <option value="NC">North Carolina</option>
                            <option value="OH">Ohio</option>
                            <option value="OR">Oregon</option>
                            <option value="ME">Maine</option>
                        </select>
                        <label>State:</label>
                    </div>
                </div>
                <div class="row">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Add Store<i class="material-icons left">add</i></button>
                </div>
            </form>
        </div>
    </div>
    {{#if data}}
        Data: {{data.store_name}}, {{data.store_city}}, {{data.store_state}}<br>
        Added: {{data.store_inserted}}
    {{/if}}

        <script type="text/javascript" src="../javascripts/materialize.js"></script>
        <script>
            // init dropdown
            var elem = document.querySelector('select');
            var instance = M.FormSelect.init(elem, {});

            // init navbar
            elem = document.querySelector('.sidenav');
            instance = M.Sidenav.init(elem, {});
        </script>
</body>


